# MongoDB Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# SCREENER.IN SCRAPER MONGODB CONFIG
# =============================================================================
# Used by scrapers/screener/screener_scraper.py when --upload-mongodb flag is set

# MongoDB Connection URI
# Examples:
# - Local MongoDB: mongodb://localhost:27017/
# - MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/
# - With authentication: mongodb://username:password@localhost:27017/
MONGODB_URI=mongodb://localhost:27017/

# Screener Database and Collection
MONGODB_DB=screener_db
MONGODB_COLLECTION=stocks

# =============================================================================
# MONEYCONTROL NEWS SCRAPER MONGODB CONFIG
# =============================================================================
# Used by upload_to_mongodb.py

# MongoDB Connection String (legacy variable name for backward compatibility)
MONGODB_CONNECTION_STRING=mongodb://localhost:27017/

# Database Name
MONGODB_DATABASE_NAME=moneycontrol_db

# Collection Name
MONGODB_COLLECTION_NAME=news_articles

# JSON File Path (optional - defaults to moneycontrol_news_crawl4ai.json)
JSON_FILE_PATH=moneycontrol_news_crawl4ai.json
